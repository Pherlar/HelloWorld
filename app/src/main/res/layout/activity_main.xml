<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/toastButton"
        android:layout_width="365dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="ToastClick"
        android:text="@string/ToastButtonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/countText"
        android:layout_width="359dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/CountTextInitial"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@+id/toastButton"
        tools:layout_editor_absoluteX="17dp" />

    <Button
        android:id="@+id/countButton"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="addOne"
        android:text="@string/CountButtonName"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countText" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="359dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:onClick="Reset"
        android:text="Reset"
        app:layout_constraintTop_toBottomOf="@+id/countButton"
        tools:layout_editor_absoluteX="13dp" />
</android.support.constraint.ConstraintLayout>